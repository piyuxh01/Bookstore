<h2 class=centeredHeader>Reviews for {{result.title}} by {{result.author}}</h2>

<div class="form">
    <form method="POST" action="http://localhost:3000/books/{{result.slug}}/comments">
        <textarea name="text" cols="60" rows="4"></textarea><br><br>
        Rating:
        <div class="rating">
            <input type="radio" name="rating" id="star5" value="5">
            <label for="star5"><i class="fas fa-star"></i></label>
            <input type="radio" name="rating" id="star4" value="4">
            <label for="star4"><i class="fas fa-star"></i></label>
            <input type="radio" name="rating" id="star3" value="3">
            <label for="star3"><i class="fas fa-star"></i></label>
            <input type="radio" name="rating" id="star2" value="2">
            <label for="star2"><i class="fas fa-star"></i></label>
            <input type="radio" name="rating" id="star1" value="1">
            <label for="star1"><i class="fas fa-star"></i></label>
        </div>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

        Name: <input type="text" name="name" value="">
        <input type="submit" value="Review!">
    </form>
</div>
{{!-- {{#lengthCheck result.reviews 0}} --}}
{{#if hasReviews}}
{{#each result.reviews}}
<h3 style="text-align: center"><span n={{this.rating}}></span><br>{{this.text}} by {{this.name}}</h3>
{{/each}}
{{else}}
<h3 style="text-align: center">No reviews yet!</h3>
{{/if}}
{{!-- {{/lengthCheck}} --}}